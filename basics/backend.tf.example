# =============================================================================
# S3 Backend Configuration (Template)
# =============================================================================
# To enable remote state:
# 1. First, apply backend/ to create S3 bucket and DynamoDB table
# 2. Copy this file: cp backend.tf.example backend.tf
# 3. Update bucket name below with your actual bucket name
# 4. Run: terraform init -migrate-state

terraform {
  backend "s3" {
    bucket         = "YOUR-BUCKET-NAME-tfstate" # Update with your bucket name
    key            = "basics/terraform.tfstate"
    region         = "ap-northeast-1"
    dynamodb_table = "terraform-state-lock"
    encrypt        = true
  }
}
