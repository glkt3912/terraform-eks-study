# =============================================================================
# Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and customize values
# cp terraform.tfvars.example terraform.tfvars

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
aws_region   = "ap-northeast-1"
project_name = "eks-study"

# -----------------------------------------------------------------------------
# VPC
# -----------------------------------------------------------------------------
vpc_cidr = "10.0.0.0/16"

# -----------------------------------------------------------------------------
# EKS Cluster
# -----------------------------------------------------------------------------
cluster_name       = "eks-study-cluster"
kubernetes_version = "1.32"

# -----------------------------------------------------------------------------
# Node Group
# -----------------------------------------------------------------------------
node_instance_types = ["t3.small"]  # t3.small is free-tier eligible
node_capacity_type  = "ON_DEMAND" # or "SPOT" for cost savings
node_min_size       = 1
node_max_size       = 2
node_desired_size   = 1
