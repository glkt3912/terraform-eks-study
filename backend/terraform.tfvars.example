# =============================================================================
# Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and customize the values
# cp terraform.tfvars.example terraform.tfvars

# AWS region
aws_region = "ap-northeast-1"

# Project name (used for resource tagging)
project_name = "terraform-eks-study"

# S3 bucket name for storing Terraform state
# IMPORTANT: Must be globally unique across all AWS accounts
# Example: "<your-account-id>-terraform-state" or "<your-name>-tfstate"
state_bucket_name = "your-unique-bucket-name-tfstate"

# DynamoDB table name for state locking
lock_table_name = "terraform-state-lock"
